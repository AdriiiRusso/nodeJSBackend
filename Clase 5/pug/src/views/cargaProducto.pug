doctype 5
html(lang="es")
head
    title Carga de productos
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css")
body
  center
    div.container.m-3
      h3 Carga de productos
      form(action="/productos", method="POST")
        div.mb-3.col-2
          label(for="title").form-label Nombre
          input(type="text", name="title").form-control
        div.mb-3.col-1
          label(for="price").form-label Precio
          input(type="number", name="price").form-control
        div.mb-3.col-8
          label(for="thumbnail").form-label URL de la imagen
          input(type="text", name="thumbnail", id="url").form-control
        button(type="submit").btn.btn-primary.m-3 <i class="bi bi-check-square-fill"></i> Cargar
        a(href="/productos", role="button").btn.btn-secondary.m-3 <i class="bi bi-collection-play-fill"></i> Ver productos cargados
      hr
      div.container
        h5 Imagenes precargadas
        button(onclick="copiar('https://cdn3.iconfinder.com/data/icons/education-209/64/ruler-triangle-stationary-school-256.png')").btn.btn-sm.btn-primary <i class="bi bi-image"></i> Imagen 1
        button(onclick="copiar('https://cdn3.iconfinder.com/data/icons/education-209/64/calculator-math-tool-school-256.png')").btn.btn-sm.btn-primary.ms-1 <i class="bi bi-image"></i> Imagen 2
        button(onclick="copiar('https://cdn3.iconfinder.com/data/icons/education-209/64/globe-earth-geograhy-planet-school-256.png')").btn.btn-sm.btn-primary.ms-1 <i class="bi bi-image"></i> Imagen 3